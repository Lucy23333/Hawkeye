<Window x:Class="Hawkeye.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hawkeye System - V1.0" Height="600" Width="800" Background="#2D2D30">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="CameraView" Grid.Row="0" Margin="10" Stretch="Uniform"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnCamera" Content="启动摄像头" Padding="15,10" Click="BtnCamera_Click" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="BtnVideo" Content="加载视频演示" Padding="15,10" Margin="10,0,0,0" Click="BtnVideo_Click" Background="#28A745" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="BtnStop" Content="停止" Padding="15,10" Margin="10,0,0,0" Click="BtnStop_Click" Background="#DC3545" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>